
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++.exe build active file",
			"command": "D:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				// "-Wall",
				"*.cpp",
				// "${workspaceFolder}\\*.cpp",
				// "${workspaceFolder}/*.h",
				// "${file}",
				"-o",
				// "${workspaceFolder}\\.vscode\\program.exe",
				"${workspaceFolder}\\.vscode\\${relativeFileDirname}${fileBasenameNoExtension}.exe",
				// "-std=c++11",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
    
}